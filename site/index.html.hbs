

<div class="logo">
	<h1 class="title ir">Two Scoop Games</h1>
</div>

<div class="games row">
			{{#each games}}
		{{#if release}}

					<div class="col-sm-6">
						<div class="game module">

							<a href="{{link}}">
								{{#if hoverimg}}
									<img alt="{{title}}" src="{{img}}" width="100%" data-hover-src="{{hoverimg}}" />
								{{else}}
									<img alt="{{title}}" src="{{img}}" width="100%" />
								{{/if}}
							</a>

							{{#if cornerBand}}
								<div class="cornerBand">{{cornerBand}}</div>
							{{/if}}
							<!-- <a href="{{link}}"><h2>{{title}}</h2></a> -->
						</div>
					</div>

			{{/if}}
		{{/each}}
</div>

<div class="prototypes row">
		<h2>Prototypes and Jam Games</h2>
		{{#each games}}
		{{#if prototype}}

					<div class="col-sm-4">
