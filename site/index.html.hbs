{{#each-row 2 games}}
	<div class="games row">
		{{#each}}
			<div class="col1-2">
				<div class="module">
					<a href="{{link}}">
						{{#if hoverimg}}
							<img alt="{{title}}" src="{{img}}" width="100%" data-hover-src="{{hoverimg}}" />
						{{else}}
							<img alt="{{title}}" src="{{img}}" width="100%" />
						{{/if}}
					</a>

					{{#if cornerBand}}
						<div class="cornerBand">{{cornerBand}}</div>
					{{/if}}
					<h2><a href="{{link}}">{{title}}</a></h2>
				</div>
			</div>
		{{/each}}
	</div>
{{/each-row}}
