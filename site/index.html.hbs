{{#each games}}
	<div class="games row">
		{{#each this}}
			<div class="col1-2">
				<div class="module">
					<a href="{{link}}">
						{{#if hoverimg}}
							<img class="hoverGif" alt="{{title}}" src="{{img}}" width="100%" data-orig="{{img}}" data-hover="{{hoverimg}}" />
						{{else}}
							<img alt="{{title}}" src="{{img}}" width="100%" />
						{{/if}}
					</a>

					{{#if cornerBand}}
						<div class="cornerBand">{{cornerBand}}</div>
					{{/if}}
					<h2><a href="{{link}}">{{title}}</a></h2>
				</div>
			</div>
		{{/each}}
	</div>
{{/each}}
